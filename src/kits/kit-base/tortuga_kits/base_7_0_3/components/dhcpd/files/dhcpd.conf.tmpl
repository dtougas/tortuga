omapi-port 7911;
ddns-update-style none;
option space PXE;
option PXE.mtftp-ip code 1 = ip-address;
option PXE.mtftp-ip 0.0.0.0;

# This is the official DHCP for the local network
authoritative;

allow booting;
allow bootp;

default-lease-time {{ leaseTime }};
max-lease-time {{ leaseTime }};

option domain-name "{{ dnsDomain }}";
{% if rhel6 %}
option domain-search "{{ dnsDomain }}";
{% endif %}

filename "pxelinux.0";

